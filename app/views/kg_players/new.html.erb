<div class="flex flex-col gap-4">
  <h1 class="font-bold text-4xl">New playa</h1>

  <%= form_with model: [@kg_game, @kg_player], local: true do |f| %>
    <%= f.label :"Playa name" %>
    <%= f.text_field :name %>
    <%= f.label :"Playa color" %>
    <%= f.text_field :color %>
    <%= f.submit %>
  <% end %>
</div>
